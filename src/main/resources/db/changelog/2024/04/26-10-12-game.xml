<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="26-10-12-game" author="skovalinsky">
        <createTable tableName="game">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="game_pkey"/>
            </column>
            <column name="quest_id" type="BIGINT"/>
            <column name="current_question_id" type="BIGINT"/>
            <column name="users_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="game_state" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="26-10-15-fk_game_game_state" author="skovalinsky">
        <addForeignKeyConstraint baseTableName="game"
                                 baseColumnNames="game_state"
                                 constraintName="fk_game_game_state"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedTableName="game_state"
                                 referencedColumnNames="value"/>
    </changeSet>

    <changeSet id="26-10-16-fk_game_users" author="skovalinsky">
        <addForeignKeyConstraint baseTableName="game"
                                 baseColumnNames="users_id"
                                 constraintName="fk_game_users"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>