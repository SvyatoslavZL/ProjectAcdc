<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="26-09-57-quest" author="skovalinsky">
        <createTable tableName="quest">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="quest_pkey"/>
            </column>
            <column name="name" type="VARCHAR(512)"/>
            <column name="text" type="VARCHAR(2048)"/>
            <column name="start_question_id" type="BIGINT"/>
            <column name="users_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="26-09-59-quest-fk" author="skovalinsky">
        <addForeignKeyConstraint baseTableName="quest"
                                 baseColumnNames="users_id"
                                 constraintName="fk_quest_users"
                                 onDelete="SET NULL"
                                 onUpdate="SET NULL"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>