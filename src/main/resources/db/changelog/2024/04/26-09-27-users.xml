<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="26-09-27-users" author="skovalinsky">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="users_pkey"/>
            </column>
            <column name="login" type="varchar(128)"/>
            <column name="password" type="varchar(256)"/>
            <column name="role" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="26-09-41-users-fk" author="skovalinsky">
        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="role"
                                 constraintName="fk_users_role"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 referencedTableName="role"
                                 referencedColumnNames="value"/>
    </changeSet>
</databaseChangeLog>