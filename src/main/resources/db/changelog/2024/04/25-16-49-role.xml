<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="25-16-49-role" author="skovalinsky">
        <createTable tableName="role">
            <column name="value" type="varchar(128)">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="role_pkey"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="25-17-04-34-role-value" author="skovalinsky">
        <insert tableName="role">
            <column name="value">ADMIN</column>
        </insert>
        <insert tableName="role">
            <column name="value">USER</column>
        </insert>
        <insert tableName="role">
            <column name="value">GUEST</column>
        </insert>
    </changeSet>
</databaseChangeLog>